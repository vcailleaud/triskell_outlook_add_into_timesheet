<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
  xsi:type="MailApp">

  <Id>104a105c-dfd8-4e47-82d3-f7a0e3179e33</Id>
  <Version>1.0.0.1</Version>
  <ProviderName>Triskell</ProviderName>
  <DefaultLocale>fr-FR</DefaultLocale>

  <DisplayName DefaultValue="Lien Temps Passés"/>
  <Description DefaultValue="Lier un rendez-vous à un temps passé"/>
  <IconUrl DefaultValue="https://triskell-outlook-add-into-timesheet-crdd.onrender.com/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://triskell-outlook-add-into-timesheet-crdd.onrender.com/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://triskellsoftware.com"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.12">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

    <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://triskell-outlook-add-into-timesheet-crdd.onrender.com/placeholder.html" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

      <!-- Règles d'activation : rendez-vous (lecture + rédaction) Règles d'activation : rendez-vous (lecture + rédaction) -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Read" />
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Edit" />
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                    xsi:type="VersionOverridesV1_0">
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
    <Description resid="res-desc"/>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>

          <ExtensionPoint xsi:type="AppointmentOrganizerCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="grpTime">
                <Label resid="grpLabel"/>
                <Control xsi:type="Button" id="btnOpen">
                  <Label resid="btnLabel"/>
                  <Supertip>
                      <Title resid="Btn.Label" />
                      <Description resid="Btn.Description" />
                  </Supertip>
                  <Icon>
                      <bt:Image size="16" resid="Icon.16" />
                      <bt:Image size="32" resid="Icon.32" />
                      <bt:Image size="80" resid="Icon.80" />
                    </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="taskpaneUrl"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
    		<bt:Images>
		  <bt:Image id="Icon.16" DefaultValue="https://triskell-outlook-add-into-timesheet-crdd.onrender.com/assets/icon-16.png" />
		  <bt:Image id="Icon.32" DefaultValue="https://triskell-outlook-add-into-timesheet-crdd.onrender.com/assets/icon-32.png" />
		  <bt:Image id="Icon.80" DefaultValue="https://triskell-outlook-add-into-timesheet-crdd.onrender.com/assets/icon-80.png" />
		</bt:Images>
      <bt:Urls>
        <bt:Url id="taskpaneUrl"
                DefaultValue="https://triskell-outlook-add-into-timesheet-crdd.onrender.com/taskpane.html"/>
        <bt:Url id="authDialogUrl"
                DefaultValue="https://triskell-outlook-add-into-timesheet-crdd.onrender.com/dialog.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="grpLabel" DefaultValue="Temps passés"/>
        <bt:String id="btnLabel" DefaultValue="Ajouter"/>
      </bt:ShortStrings>
    </Resources>
  </VersionOverrides>
  </VersionOverrides>
</OfficeApp>
